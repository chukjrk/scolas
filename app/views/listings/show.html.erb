<div class="overlay"></div>
<div class="container" id="spacing">

	<div class="row">
		<div class="col-md-6">
			<div class="thumbnail">
				<%= image_tag @listing.image.url %>
			</div>
		</div>
		<div class="col-md-6">
			<h3><%= @listing.name %></h3>
			<p><%= @listing.description %></p>
		</div>

		<button id="buy-product" class="btn btn-primary">Buy</button>

		<div id="dialog">
			<p>Enter message for seller and click confirm</p>
	  		<%= form_for @transaction do |f| %>
				<%= hidden_field_tag "listing_id", @listing.id %>
				<%= text_area_tag "message", "", class: "form-control", placeholder: "Message..." %>
				<button class="btn btn-primary cancel">Cancel</button>
				<%= f.submit "Confirm", class: "btn btn-success confirm" %>
			<% end %>
		</div>

		<%if current_user == @listing.user %>
			<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
		<% end %>

		<%= link_to 'Back', listings_path, class: "btn btn-link" %>
	</div>
</div>