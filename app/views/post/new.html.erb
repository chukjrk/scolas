<div class="container" id="spacing">

	<h1>What's on your mind?</h1>
	<%= form_for :post, url: post_index_path do |f| %>
	<!-- <div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div> -->
	<div><%= f.label :content %></div>

	<div>
		<%= f.text_area :content, class:"col-md-7" %>
	</div>
	<br>

	<div class="col-md-12">
		<% @interests_array.each do |subject| %>
		<label class="radio-inline">
			<%= f.radio_button :subject, "#{subject.id}" %> <%= subject.name %>
		</label>
		<% end %>
	</div>

	<br>

	<div class="col-md-12">
		<%= f.submit %>
	</div>
	<% end %>

</div>
